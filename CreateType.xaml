<Window x:Class="BudGet2._0.CreateType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudGet2._0"
        mc:Ignorable="d"
        Title="CreateType" Height="355" Width="330">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Text="Введите тип добавляемой записи" TextAlignment="Center" Margin="0,20,0,32"></TextBlock>
        <TextBox x:Name="TypeNoteTBox" Grid.ColumnSpan="2" Margin="10,1,10,10" Grid.Row="1"/>
        <Button x:Name="CreateNewType" Grid.Column="1" Grid.Row="2" Content="Добавить новый тип" Click="CreateNewType_Click" Margin="0,31,0,44"/>
    </Grid>
</Window>
